@page
@model Server.Pages.Admin.Slides.EditModel
@{
    var pageTitle =
        Resources.PageTitles.EditeSlide;

    ViewData["PageTitle"] = pageTitle;

    if (System.Threading.Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        Layout =
            "Layouts/Rtl/_Security";
    }
    else
    {
        Layout =
            "Layouts/Ltr/_Security";
    }
}


<div class="container my-0 my-sm-1 my-md-3 my-lg-5">
    <div class="row">
        <div class="col-12 p-3 col-md-8 offset-md-2 p-md-4 col-lg-6 offset-lg-3 p-lg-5   bg-light border border-2 rounded-3 shadow-lg">
            <fieldset>
                <legend>
                    @(Resources.PageTitles.EditeSlide)
                </legend>

                <form method="post">
                    <input type="hidden" asp-for="Id" />
                   <div class="mb-3">
                        <label asp-for="Slide.MainTitle" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.MainTitle" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.MainTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Slide.SubTitle" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.SubTitle" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.SubTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Slide.Description" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.Description" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.Description" class="text-danger"></span>
                    </div>


                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Slide.IsActive" type="checkbox" checked="checked" />
                            @Html.DisplayNameFor(model => model.Slide.IsActive)
                        </label>
                    </div>

                    @*****************************************************************************************************************************@
                    <div class="mb-3">
                        <label asp-for="Slide.StartDateTime" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.StartDateTime" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.StartDateTime" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Slide.FinishDateTime" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.FinishDateTime" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.FinishDateTime" class="text-danger"></span>
                    </div>
                    @*****************************************************************************************************************************@
                    <div class="mb-3">
                        <label asp-for="Slide.UrlLink" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.UrlLink" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.UrlLink" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Slide.OrderingNumber" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Slide.OrderingNumber" class="form-control" dir="rtl" />
                        </div>

                        <span asp-validation-for="Slide.OrderingNumber" class="text-danger"></span>
                    </div>
                    

                    @*****************************************************************************************************************************@

                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-success">@(Resources.ButtonCaptions.Save)</button>
                        <button type="reset" class="btn btn-outline-danger">@(Resources.ButtonCaptions.Reset)</button>
                    </div>
                </form>

            </fieldset>
             
        </div>
    </div>
</div>